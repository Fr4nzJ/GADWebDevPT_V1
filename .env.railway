# Railway.com Production Environment Configuration

# App Configuration
APP_NAME="GAD Website"
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:${APP_KEY}
APP_URL=https://${RAILWAY_DOMAIN}

# Logging
LOG_CHANNEL=stderr
LOG_LEVEL=notice

# Database Configuration (PostgreSQL provided by Railway)
DB_CONNECTION=pgsql
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT}
DB_DATABASE=${DB_DATABASE}
DB_USERNAME=${DB_USERNAME}
DB_PASSWORD=${DB_PASSWORD}

# Cache Configuration (Database-based for simplicity, can use Redis)
CACHE_DRIVER=database
SESSION_DRIVER=database
QUEUE_CONNECTION=database

# Session Configuration
SESSION_LIFETIME=120
SESSION_DOMAIN=.${RAILWAY_DOMAIN}
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Mail Configuration (Update with actual service)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USERNAME=${MAIL_USERNAME}
MAIL_PASSWORD=${MAIL_PASSWORD}
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@${RAILWAY_DOMAIN}
MAIL_FROM_NAME="GAD Website"

# Security
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# Performance
OPCACHE_ENABLE=1
OPCACHE_ENABLE_CLI=0
OPCACHE_MEMORY_CONSUMPTION=256
OPCACHE_INTERNED_STRINGS_BUFFER=16
OPCACHE_MAX_ACCELERATED_FILES=10000
OPCACHE_SAVE_COMMENTS=0
OPCACHE_FAST_SHUTDOWN=1
