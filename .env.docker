# === Docker Development Environment ===
# Copy this file to .env and adjust values for your local development

# Laravel Configuration
APP_NAME="GAD Website"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost
APP_KEY=base64:${APP_KEY}

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=gadwebdev_local
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Cache & Session (Using Redis in Docker)
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (Using Mailhog)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=no-reply@gadwebdev.local
MAIL_FROM_NAME="GAD Website"

# Other Services
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Docker-specific
RUN_MIGRATIONS=true
RUN_SEEDERS=false
